{
  "name": "linknova-ui",
  "version": "1.0.0",
  "description": "Professional bookmark storage interface with admin panel",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run tailwind:watch\" \"npm run serve\"",
    "build": "npm run tailwind:build && npm run minify",
    "tailwind:build": "tailwindcss -i ./src/styles/input.css -o ./src/static/css/styles.css --minify",
    "tailwind:watch": "tailwindcss -i ./src/styles/input.css -o ./src/static/css/styles.css --watch",
    "serve": "http-server ./src -p 3000 -o",
    "minify": "node scripts/build.js",
    "clean": "rm -rf dist/*",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:html",
    "lint:js": "eslint \"src/**/*.js\" --max-warnings 0",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint:html": "htmlhint \"src/**/*.html\"",
    "lint:fix": "npm run lint:js:fix && npm run lint:css:fix && npm run format",
    "lint:js:fix": "eslint \"src/**/*.js\" --fix",
    "lint:css:fix": "stylelint \"src/**/*.css\" --fix",
    "format": "prettier --write \"src/**/*.{js,css,html,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,css,html,json,md}\"",
    "precommit": "npm run lint && npm run format:check"
  },
  "keywords": ["bookmark", "storage", "admin", "tailwind", "javascript"],
  "author": "LinkNova Team",
  "license": "MIT",
  "devDependencies": {
    "tailwindcss": "^3.4.0",
    "@tailwindcss/forms": "^0.5.7",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "concurrently": "^8.2.2",
    "http-server": "^14.1.1",
    "html-minifier": "^4.0.0",
    "terser": "^5.24.0",
    "eslint": "^8.57.0",
    "@eslint/js": "^9.32.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-html": "^8.0.0",
    "stylelint": "^14.16.1",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-config-prettier": "^9.0.5",
    "htmlhint": "^1.1.4",
    "prettier": "^3.2.5"
  },
  "dependencies": {}
}